<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.auth.SignInFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_sport_store"
        android:layout_marginBottom="14dp"/>

    <TextView
        style="@style/lbl_input"
        android:text="@string/e_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtSigninEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/example_email"
        android:text=""
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_primary"/>

    <TextView
        style="@style/lbl_input"
        android:text="@string/contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtSigninContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/contrasena"
        android:text=""
        android:inputType="textPassword"
        android:background="@drawable/edit_text_primary" />

    <Button
        android:id="@+id/btnSigninSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/iniciar_sesion"
        style="@style/txt_btn_dark_primary"
        android:background="@drawable/btn_dark_primary"/>

    <TextView
        android:id="@+id/txtSigninRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/no_tiene_cuenta"/>

</LinearLayout>